set $gnome-schema org.gnome.desktop.interface
exec_always {
  gsettings set $gnome-schema gtk-theme 'Vertex-Light'
  gsettings set $gnome-schema icon-theme 'kora'
  gsettings set $gnome-schema cursor-theme 'Oxygen_Black'
  gsettings set $gnome-schema cursor-size '48'
  gsettings set $gnome-schema font-name 'Noto Sans Regular 14'
}

