  bindsym XF86AudioLowerVolume exec /usr/bin/light -U 5
  bindsym equal exec /usr/bin/light -A 5
  bindsym minus exec /usr/bin/light -U 5
  bindsym Right exec /usr/bin/light -A 5
  bindsym Left exec /usr/bin/light -U 5
  bindsym XF86AudioMute exec /usr/bin/light -S 30
  bindsym slash exec notify-send -i mx-alerts "Current level" "$(/usr/bin/light -G)"
  bindsym Shift+slash exec notify-send -i mx-alerts "Current level" "$(/usr/bin/light -G)"
  bindsym g exec notify-send -i mx-alerts "Current level" "$(/usr/bin/light -G)"
  bindsym 0 exec /usr/bin/light -S 0
  bindsym 1 exec /usr/bin/light -S 10
  bindsym 2 exec /usr/bin/light -S 20
  bindsym 3 exec /usr/bin/light -S 30
  bindsym 4 exec /usr/bin/light -S 40
  bindsym 5 exec /usr/bin/light -S 50
  bindsym 6 exec /usr/bin/light -S 60
  bindsym 7 exec /usr/bin/light -S 70
  bindsym 8 exec /usr/bin/light -S 80
  bindsym 9 exec /usr/bin/light -S 90
  #bindsym --release grave exec sh -c 'sleep 1s && xset dpms force standby'
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
